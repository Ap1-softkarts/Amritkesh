{{ 'faqs.css' | asset_url | stylesheet_tag }}

{%- style -%}
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }
  
    @media screen and (min-width: 750px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    } 
{%- endstyle -%}

<section id="{{ section.id }}" class="customer-faq color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
    <div class="page-width"> 
        <div class="faq-container">
            <div class="faq-text-container text-wrapper">
                <div class="heading-wrapper title-wrapper title-wrapper--no-top-margin">
                    {%- if section.settings.section_heading != blank -%}
                        <h2 class="title inline-richtext {{ section.settings.heading_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
                            {{ section.settings.section_heading }}
                        </h2>
                    {%- endif -%}
                    {% if section.settings.description != blank %}
                        <div class="content-wrapper">
                            <p class="subheading">{{ section.settings.description }}</p>
                        </div>
                    {% endif %}
                </div>
            </div>
            <div class="faq-list-container">
                <div class="faq-list faq--blocks">
                    {% for block in section.blocks %}
                        <div class="faq-item">
                            {% if block.settings.faq_heading != blank %}
                                <div class="faq-heading">{{ block.settings.faq_heading }} <span class="icon-plus">{% render 'icon-plus' %}</span></div>
                            {% endif %}
                            {% if block.settings.faq_content != blank %}
                                <div class="faq-content">{{ block.settings.faq_content }}</div>
                            {% endif %}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    $(document).ready(function() {
        $('.faq-item').each(function() {
        var $heading = $(this).find('.faq-heading');
        var $content = $(this).find('.faq-content');        
            $heading.on('click', function() {            
                $('.faq-item').not($(this).parent()).removeClass('active');
                $('.faq-content').not($content).slideUp();
                $content.slideToggle();
                $(this).parent().toggleClass('active');
            });
        });
    })
</script>

{% schema %}
    {
      "name": "Faq's",
      "settings": [
        {
            "type": "inline_richtext",
            "id": "section_heading",
            "label": "Heading"
        },
        {
            "type": "textarea",
            "id": "description",
            "label": "Content"
        },
        {
            "type": "select",
            "id": "heading_size",
            "options": [ 
            {
                "value": "h2",
                "label": "t:sections.all.heading_size.options__1.label"
            },
            {
                "value": "h1",
                "label": "t:sections.all.heading_size.options__2.label"
            },
            {
                "value": "h0",
                "label": "t:sections.all.heading_size.options__3.label"
            }
        ],
            "default": "h1",
            "label": "t:sections.all.heading_size.label"
        },
        {
            "type": "color_scheme",
            "id": "color_scheme",
            "label": "t:sections.all.colors.label",
            "info": "t:sections.all.colors.has_cards_info",
            "default": "scheme-1"
        },
        {
            "type": "header",
            "content": "t:sections.all.padding.section_padding_heading"
        },
        {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "t:sections.all.padding.padding_top",
            "default": 36
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "t:sections.all.padding.padding_bottom",
            "default": 36
        }
      ],
      "blocks": [
        {
            "type": "faq",
            "name": "Faq",
            "settings": [
                {
                    "type": "richtext",
                    "id": "faq_heading",
                    "label": "Heading"
                },
                {
                    "type": "textarea",
                    "id": "faq_content",
                    "label": "Content"
                }
            ]
        }
      ],
      "presets": [
        {
          "name": "Faq's"
        }
      ]
    }
{% endschema %}